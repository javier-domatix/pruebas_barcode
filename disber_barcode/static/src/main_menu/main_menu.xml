<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="disber_barcode.MainMenu">
        <div class="o_home_menu_background h-100 w-100 pt-sm-3">
            <div class="o_stock_barcode_main_menu container d-flex flex-column h-100 h-sm-auto bg-view shadow">
                <header>
                    <div class="d-flex align-items-center justify-content-between my-3">
                        <!-- <a t-if="!pwaService.isScopedApp" href="#" class="o_stock_barcode_home_menu oi oi-apps me-3 text-dark"
                            t-on-click="showAllMenus"/> -->
                        <span class="fs-2 me-auto">Barcode Scanner</span>
                    </div>
                </header>
                <footer>
                    <button class="o_button_operations btn btn-block btn-primary mb-3 p-3 w-100"
                            t-on-click="() => this.actionService.doAction('disber_barcode.stock_barcode_action_stock_menu')">
                        Stock
                    </button>
                    <button class="o_button_operations btn btn-block btn-primary mb-3 p-3 w-100"
                            t-on-click="() => this.actionService.doAction('disber_barcode.stock_barcode_action_package_movement_menu')">
                        Movimientos de paquetes
                    </button>
                    <button class="o_button_operations btn btn-block btn-primary mb-3 p-3 w-100"
                            t-on-click="() => this.actionService.doAction('disber_barcode.stock_barcode_action_pickings_menu')">
                        Transferencias
                    </button>
                </footer>
            </div>
        </div>
    </t>
</templates>
